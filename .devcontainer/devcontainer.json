// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "snowflake-hol-timeseries",
	"image": "mcr.microsoft.com/devcontainers/python:3.11",

	// Install conda and java features
	"features": {
        "ghcr.io/devcontainers/features/java:1.6.0": {},
        "ghcr.io/devcontainers/features/anaconda:1.1.0": {}
    },

	// POST create and init conda environment
	"postCreateCommand": "./.devcontainer/postCreateCommand.sh",

	// VS code exentions
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			// Set VSCode settings
			"settings": {
				"python.defaultInterpreterPath": "/usr/local/conda/envs/hol-timeseries/bin/python",
				"python.terminal.activateEnvInCurrentTerminal": true
			},
			// Add the IDs of extensions you want installed when the container is created.
			"extensions": [
				"snowflake.snowflake-vsc",
				"ms-toolsai.jupyter",
				"h5web.vscode-h5web",
				"redhat.vscode-xml",
				"redhat.vscode-yaml",
				"tomoki1207.pdf",
				"mechatroner.rainbow-csv",
				"vscjava.vscode-java-pack"
			]
		}
	},

	// Environment Variables
	"containerEnv": {
    	"SNOWFLAKE_HOME": "/workspaces/sfguide-getting-started-with-time-series-using-snowflake-streaming-sis-ml-notebooks/.snowflake"
	}
}